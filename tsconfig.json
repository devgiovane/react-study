{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "baseUrl": ".",
        "paths": {
            "~@Adapters/*": [
                "./src/adapters/*"
            ],
            "~@Components/*": [
                "./src/components/*"
            ],
            "~@Pages/*": [
                "./src/pages/*"
            ],
            "~@Services/*": [
                "./src/services/*"
            ],
            "~@Contexts/*": [
                "./src/contexts/*"
            ]
        }
    }
}
